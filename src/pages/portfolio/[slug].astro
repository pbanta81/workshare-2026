---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';
import { getCompanyConfig } from '../../data/companies';

export const prerender = false;

const { slug } = Astro.params;

// Get company-specific config (dynamic per password)
const companyConfig = slug ? getCompanyConfig(slug) : null;

if (!companyConfig) {
  return Astro.redirect('/');
}

// Get shared static portfolio content (same for all companies)
const portfolios = await getCollection('portfolios');
const portfolio = portfolios[0]; // We only have one shared portfolio

if (!portfolio) {
  return Astro.redirect('/');
}

const { Content } = await render(portfolio);

// Static content from MDX
const { title, headshot, tagline, work } = portfolio.data;

// Dynamic content from company config
const { welcomeImage, welcomeCompany, color } = companyConfig;
---

<Layout title={`${title} â€” Patrick Banta`}>
  <div id="page-transition-overlay"></div>
  <main class="portfolio-page">
    <div class="portfolio-page-inner">
    <!-- Welcome Image with Glitch Effect -->
    {welcomeImage && (
      <section class="welcome-image">
        <div class="welcome-glitch-container" id="welcome-glitch">
          <img src={welcomeImage} alt="Welcome" class="welcome-img welcome-base" style="image-rendering: pixelated;" />
          <img src={welcomeImage} alt="" class="welcome-img welcome-r" style="image-rendering: pixelated;" aria-hidden="true" />
          <img src={welcomeImage} alt="" class="welcome-img welcome-b" style="image-rendering: pixelated;" aria-hidden="true" />
        </div>
        {welcomeCompany && <p class="welcome-company">{welcomeCompany}</p>}
      </section>
    )}

    <!-- Heading Section -->
    <section class="heading">
      <div class="heading-text">
        <h1 class="name">{title}</h1>
        {tagline && <p class="tagline">{tagline}</p>}
      </div>
      {headshot && (
        <div class="headshot">
          <img src={headshot} alt={title} />
        </div>
      )}
    </section>

    <!-- Work Section -->
    {work && work.length > 0 && (
      <section class="work">
        <h2 class="work-title">ROLES</h2>
        <div class="work-list">
          {work.map((job) => (
            <div class="work-item">
              <div class="work-content">
                <img src={job.logo} alt={job.company} class="work-logo" />
                <span class="work-company">{job.company}</span>
                <span class="work-role">{job.role}</span>
              </div>
              <span class="work-years">{job.years}</span>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Additional MDX Content -->
    <div class="portfolio-body">
      <Content />
    </div>
    </div>
  </main>
</Layout>

<style>
  #page-transition-overlay {
    position: fixed;
    inset: 0;
    background: #0D0E11;
    z-index: 99999;
    pointer-events: none;
    transition: opacity 0.3s ease-out;
  }
  
  #page-transition-overlay.fade-out {
    opacity: 0;
  }
  
  .portfolio-page {
    position: fixed;
    inset: 0;
    overflow-y: auto;
    padding: 80px 48px;
    z-index: 1;
  }
  
  .portfolio-page-inner {
    max-width: 1000px;
    margin: 0 auto;
    min-height: 100vh;
  }
  
  @keyframes fadeSlideIn {
    from {
      opacity: 0;
      transform: translateX(-80px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Welcome Image */
  .welcome-image {
    margin: 0 auto 60px;
    max-width: 650px;
    opacity: 0;
    transform: translateX(-80px);
    animation: fadeSlideIn 0.6s ease-out forwards;
  }

  .welcome-glitch-container {
    position: relative;
    cursor: pointer;
    --welcome-glitch-duration: 350ms;
    --welcome-glitch-intensity: 18px;
  }

  .welcome-company {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 18px;
    color: #FF2F00;
    margin: 12px 0 0;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .welcome-img {
    width: 100%;
    height: auto;
    display: block;
  }

  .welcome-r,
  .welcome-b {
    position: absolute;
    top: 0;
    left: 0;
    opacity: 0;
    pointer-events: none;
  }

  .welcome-r {
    mix-blend-mode: screen;
  }

  .welcome-b {
    mix-blend-mode: screen;
  }

  /* Active glitch state */
  .welcome-glitch-container.glitching .welcome-r,
  .welcome-glitch-container.glitching .welcome-b {
    opacity: 0.85;
  }

  .welcome-glitch-container.glitching .welcome-r {
    animation: welcome-glitch-r calc(var(--welcome-glitch-duration) * 0.4) steps(2) infinite;
  }

  .welcome-glitch-container.glitching .welcome-b {
    animation: welcome-glitch-b calc(var(--welcome-glitch-duration) * 0.4) steps(2) infinite;
  }

  .welcome-glitch-container.glitching .welcome-base {
    animation: welcome-glitch-base calc(var(--welcome-glitch-duration) * 0.5) steps(3) infinite;
  }

  /* Lime/green layer - shifts toward lime/yellow */
  @keyframes welcome-glitch-r {
    0% {
      transform: translate(var(--welcome-glitch-intensity), calc(var(--welcome-glitch-intensity) * -0.3));
      clip-path: polygon(0 15%, 100% 15%, 100% 28%, 0 28%);
      filter: hue-rotate(25deg) saturate(2) brightness(1.2);
    }
    25% {
      transform: translate(calc(var(--welcome-glitch-intensity) * -1.2), calc(var(--welcome-glitch-intensity) * 0.15));
      clip-path: polygon(0 55%, 100% 55%, 100% 68%, 0 68%);
      filter: hue-rotate(25deg) saturate(2) brightness(1.2);
    }
    50% {
      transform: translate(calc(var(--welcome-glitch-intensity) * 0.5), calc(var(--welcome-glitch-intensity) * -0.2));
      clip-path: polygon(0 75%, 100% 75%, 100% 90%, 0 90%);
      filter: hue-rotate(25deg) saturate(2) brightness(1.2);
    }
    75% {
      transform: translate(calc(var(--welcome-glitch-intensity) * -0.8), calc(var(--welcome-glitch-intensity) * 0.3));
      clip-path: polygon(0 8%, 100% 8%, 100% 22%, 0 22%);
      filter: hue-rotate(25deg) saturate(2) brightness(1.2);
    }
    100% {
      transform: translate(calc(var(--welcome-glitch-intensity) * 0.9), calc(var(--welcome-glitch-intensity) * -0.25));
      clip-path: polygon(0 40%, 100% 40%, 100% 52%, 0 52%);
      filter: hue-rotate(25deg) saturate(2) brightness(1.2);
    }
  }

  /* Orange/red layer - shifts toward deep orange/red */
  @keyframes welcome-glitch-b {
    0% {
      transform: translate(calc(var(--welcome-glitch-intensity) * -0.6), calc(var(--welcome-glitch-intensity) * 0.3));
      clip-path: polygon(0 65%, 100% 65%, 100% 80%, 0 80%);
      filter: hue-rotate(-25deg) saturate(2.5) brightness(1.1);
    }
    25% {
      transform: translate(calc(var(--welcome-glitch-intensity) * 0.9), calc(var(--welcome-glitch-intensity) * -0.15));
      clip-path: polygon(0 30%, 100% 30%, 100% 42%, 0 42%);
      filter: hue-rotate(-25deg) saturate(2.5) brightness(1.1);
    }
    50% {
      transform: translate(calc(var(--welcome-glitch-intensity) * -0.75), calc(var(--welcome-glitch-intensity) * 0.2));
      clip-path: polygon(0 2%, 100% 2%, 100% 18%, 0 18%);
      filter: hue-rotate(-25deg) saturate(2.5) brightness(1.1);
    }
    75% {
      transform: translate(calc(var(--welcome-glitch-intensity) * 0.6), calc(var(--welcome-glitch-intensity) * -0.3));
      clip-path: polygon(0 48%, 100% 48%, 100% 62%, 0 62%);
      filter: hue-rotate(-25deg) saturate(2.5) brightness(1.1);
    }
    100% {
      transform: translate(calc(var(--welcome-glitch-intensity) * -0.9), calc(var(--welcome-glitch-intensity) * 0.15));
      clip-path: polygon(0 82%, 100% 82%, 100% 95%, 0 95%);
      filter: hue-rotate(-25deg) saturate(2.5) brightness(1.1);
    }
  }

  @keyframes welcome-glitch-base {
    0%, 100% {
      transform: translate(0, 0) skewX(0deg);
    }
    20% {
      transform: translate(calc(var(--welcome-glitch-intensity) * -0.25), 0) skewX(-0.4deg);
    }
    40% {
      transform: translate(calc(var(--welcome-glitch-intensity) * 0.3), 0) skewX(0.4deg);
    }
    60% {
      transform: translate(calc(var(--welcome-glitch-intensity) * -0.2), 0) skewX(-0.25deg);
    }
    80% {
      transform: translate(calc(var(--welcome-glitch-intensity) * 0.2), 0) skewX(0.25deg);
    }
  }

  /* Heading Section */
  .heading {
    display: flex;
    align-items: center;
    gap: 45px;
    margin: 0 auto 60px;
    max-width: 650px;
    opacity: 0;
    transform: translateX(-80px);
    animation: fadeSlideIn 0.6s ease-out forwards;
    animation-delay: 0.2s;
  }

  .headshot {
    width: 120px;
    height: 120px;
    flex-shrink: 0;
  }

  .headshot img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .heading-text {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .name {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 24px;
    font-weight: bold;
    color: white;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .tagline {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 18px;
    line-height: 1.5;
    color: white;
    margin: 0;
  }

  /* Work Section */
  .work {
    margin: 0 auto 60px;
    max-width: 650px;
    opacity: 0;
    transform: translateX(-80px);
    animation: fadeSlideIn 0.6s ease-out forwards;
    animation-delay: 0.4s;
  }

  .work-title {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 18px;
    font-weight: bold;
    color: white;
    margin: 0 0 16px;
    text-transform: uppercase;
  }

  .work-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .work-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .work-content {
    display: flex;
    align-items: center;
    gap: 22px;
  }

  .work-logo {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .work-company {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 18px;
    font-weight: bold;
    color: white;
  }

  .work-role {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 18px;
    color: #686868;
  }

  .work-years {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 18px;
    font-weight: bold;
    color: #686868;
  }

  /* Portfolio Body (MDX content) */
  .portfolio-body {
    font-size: 16px;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
  }

  .portfolio-body:empty {
    display: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .portfolio-page {
      padding: 40px 24px;
    }

    .heading {
      flex-direction: column;
      align-items: flex-start;
      gap: 24px;
    }

    .headshot {
      width: 150px;
      height: 150px;
    }

    .name {
      font-size: 32px;
    }

    .tagline {
      font-size: 18px;
    }

    .work-company,
    .work-role,
    .work-years {
      font-size: 16px;
    }

    .work-content {
      gap: 12px;
    }

    .work-logo {
      width: 24px;
      height: 24px;
    }
  }
</style>

<script is:inline>
  // Fade out transition overlay after GL canvas has a chance to render
  requestAnimationFrame(() => {
    requestAnimationFrame(() => {
      const overlay = document.getElementById('page-transition-overlay');
      if (overlay) {
        overlay.classList.add('fade-out');
        setTimeout(() => overlay.remove(), 300);
      }
    });
  });
  
  // Welcome image glitch effect
  const welcomeGlitch = document.getElementById('welcome-glitch');
  
  function triggerWelcomeGlitch() {
    if (!welcomeGlitch) return;
    
    welcomeGlitch.classList.add('glitching');
    
    // Get duration from CSS variable (or default)
    const computedStyle = getComputedStyle(welcomeGlitch);
    const duration = parseInt(computedStyle.getPropertyValue('--welcome-glitch-duration')) || 350;
    
    setTimeout(() => {
      welcomeGlitch.classList.remove('glitching');
    }, duration);
  }
  
  if (welcomeGlitch) {
    // Trigger glitch on click
    welcomeGlitch.addEventListener('click', triggerWelcomeGlitch);
    
    // Trigger glitch once after animations complete + 1.5 seconds
    setTimeout(triggerWelcomeGlitch, 1500);
    
    // Continue triggering every 8-15 seconds (random interval for organic feel)
    function scheduleNextGlitch() {
      const interval = 8000 + Math.random() * 7000; // 8-15 seconds
      setTimeout(() => {
        triggerWelcomeGlitch();
        scheduleNextGlitch();
      }, interval);
    }
    scheduleNextGlitch();
  }
</script>
