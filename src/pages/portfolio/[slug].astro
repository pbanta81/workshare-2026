---
import Layout from '../../layouts/Layout.astro';
import { getCollection, render } from 'astro:content';

export const prerender = false;

const { slug } = Astro.params;

// Get the portfolio content
const portfolios = await getCollection('portfolios');
const portfolio = portfolios.find(p => p.id === slug || p.id === `${slug}.mdx`);

if (!portfolio) {
  return Astro.redirect('/');
}

const { Content } = await render(portfolio);
const { title, headshot, tagline, work } = portfolio.data;
---

<Layout title={`${title} â€” Patrick Banta`}>
  <div id="page-transition-overlay"></div>
  <main class="portfolio-page">
    <div class="portfolio-page-inner">
    <!-- Heading Section -->
    <section class="heading">
      {headshot && (
        <div class="headshot">
          <img src={headshot} alt={title} />
        </div>
      )}
      <div class="heading-text">
        <h1 class="name">{title}</h1>
        {tagline && <p class="tagline">{tagline}</p>}
      </div>
    </section>

    <!-- Work Section -->
    {work && work.length > 0 && (
      <section class="work">
        <h2 class="work-title">WORK</h2>
        <div class="work-list">
          {work.map((job) => (
            <div class="work-item">
              <div class="work-content">
                <img src={job.logo} alt={job.company} class="work-logo" />
                <span class="work-company">{job.company}</span>
                <span class="work-role">{job.role}</span>
              </div>
              <span class="work-years">{job.years}</span>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Additional MDX Content -->
    <div class="portfolio-body">
      <Content />
    </div>
    </div>
  </main>
</Layout>

<style>
  #page-transition-overlay {
    position: fixed;
    inset: 0;
    background: #0D0E11;
    z-index: 99999;
    pointer-events: none;
    transition: opacity 0.3s ease-out;
  }
  
  #page-transition-overlay.fade-out {
    opacity: 0;
  }
  
  .portfolio-page {
    position: fixed;
    inset: 0;
    overflow-y: auto;
    padding: 80px 48px;
    z-index: 1;
  }
  
  .portfolio-page-inner {
    max-width: 1000px;
    margin: 0 auto;
    min-height: 100vh;
  }
  
  @keyframes fadeSlideIn {
    from {
      opacity: 0;
      transform: translateX(-80px);
    }
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  /* Heading Section */
  .heading {
    display: flex;
    align-items: center;
    gap: 45px;
    margin: 0 auto 60px;
    max-width: 650px;
    opacity: 0;
    transform: translateX(-80px);
    animation: fadeSlideIn 0.6s ease-out forwards;
  }

  .headshot {
    width: 120px;
    height: 120px;
    flex-shrink: 0;
  }

  .headshot img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 50%;
  }

  .heading-text {
    display: flex;
    flex-direction: column;
    gap: 24px;
  }

  .name {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 24px;
    font-weight: bold;
    color: white;
    margin: 0;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .tagline {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 18px;
    line-height: 1.5;
    color: white;
    margin: 0;
  }

  /* Work Section */
  .work {
    margin: 0 auto 60px;
    max-width: 650px;
    opacity: 0;
    transform: translateX(-80px);
    animation: fadeSlideIn 0.6s ease-out forwards;
    animation-delay: 0.2s;
  }

  .work-title {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 18px;
    font-weight: bold;
    color: white;
    margin: 0 0 16px;
    text-transform: uppercase;
  }

  .work-list {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .work-item {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .work-content {
    display: flex;
    align-items: center;
    gap: 22px;
  }

  .work-logo {
    width: 24px;
    height: 24px;
    object-fit: contain;
  }

  .work-company {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 18px;
    font-weight: bold;
    color: white;
  }

  .work-role {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 18px;
    color: #686868;
  }

  .work-years {
    font-family: 'Berkeley Mono', 'Courier New', monospace;
    font-size: 18px;
    font-weight: bold;
    color: #686868;
  }

  /* Portfolio Body (MDX content) */
  .portfolio-body {
    font-size: 16px;
    line-height: 1.8;
    color: rgba(255, 255, 255, 0.9);
  }

  .portfolio-body:empty {
    display: none;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .portfolio-page {
      padding: 40px 24px;
    }

    .heading {
      flex-direction: column;
      align-items: flex-start;
      gap: 24px;
    }

    .headshot {
      width: 150px;
      height: 150px;
    }

    .name {
      font-size: 32px;
    }

    .tagline {
      font-size: 18px;
    }

    .work-company,
    .work-role,
    .work-years {
      font-size: 16px;
    }

    .work-content {
      gap: 12px;
    }

    .work-logo {
      width: 24px;
      height: 24px;
    }
  }
</style>

<script is:inline>
  // Fade out transition overlay after GL canvas has a chance to render
  requestAnimationFrame(() => {
    requestAnimationFrame(() => {
      const overlay = document.getElementById('page-transition-overlay');
      if (overlay) {
        overlay.classList.add('fade-out');
        setTimeout(() => overlay.remove(), 300);
      }
    });
  });
</script>
