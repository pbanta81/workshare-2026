---
import Layout from '../layouts/Layout.astro';

const projects = [
  {
    title: "Fintech Dashboard",
    category: "Product Design",
    year: "2025",
    image: "/projects/project-1.jpg",
    color: "from-violet-500/20 to-fuchsia-500/20"
  },
  {
    title: "Health & Wellness App",
    category: "Mobile Design",
    year: "2025",
    image: "/projects/project-2.jpg",
    color: "from-emerald-500/20 to-teal-500/20"
  },
  {
    title: "E-Commerce Redesign",
    category: "UX Strategy",
    year: "2024",
    image: "/projects/project-3.jpg",
    color: "from-amber-500/20 to-orange-500/20"
  },
  {
    title: "SaaS Platform",
    category: "Design System",
    year: "2024",
    image: "/projects/project-4.jpg",
    color: "from-sky-500/20 to-indigo-500/20"
  }
];
---

<Layout>
  <!-- Hero Section -->
  <section class="min-h-screen flex flex-col items-center justify-center px-6">
    <div class="w-full max-w-4xl mx-auto animate-fade-in opacity-0">
      <img 
        src="/ansi-heading.svg" 
        alt="Patrick Banta" 
        class="w-full h-auto"
      />
    </div>
  </section>

  <!-- Work Section -->
  <section id="work" class="px-6 py-32">
    <div class="max-w-7xl mx-auto">
      <div class="flex flex-col md:flex-row md:items-end md:justify-between mb-16">
        <div>
          <p class="text-cyan-400 text-sm tracking-widest uppercase mb-4">Selected Work</p>
          <h2 class="text-4xl md:text-5xl font-serif">Featured Projects</h2>
        </div>
        <a href="/work" class="text-stone-400 hover:text-stone-100 transition-colors mt-4 md:mt-0 group">
          View All Projects 
          <span class="inline-block transition-transform group-hover:translate-x-1">→</span>
        </a>
      </div>
      
      <div class="grid md:grid-cols-2 gap-6">
        {projects.map((project, index) => (
          <a 
            href={`/work/${project.title.toLowerCase().replace(/\s+/g, '-')}`}
            class="group relative aspect-[4/3] rounded-2xl overflow-hidden bg-white/[0.03] cursor-pointer"
          >
            <div class={`absolute inset-0 bg-gradient-to-br ${project.color} opacity-60 group-hover:opacity-80 transition-opacity`}></div>
            <div class="absolute inset-0 flex items-center justify-center">
              <span class="text-stone-500 text-sm">[ Project Image ]</span>
            </div>
            <div class="absolute inset-0 p-8 flex flex-col justify-end bg-gradient-to-t from-[#0D0E11]/95 via-transparent to-transparent">
              <div class="flex items-center gap-3 mb-3">
                <span class="text-xs text-stone-400 uppercase tracking-wider">{project.category}</span>
                <span class="text-stone-600">•</span>
                <span class="text-xs text-stone-400">{project.year}</span>
              </div>
              <h3 class="text-2xl font-serif group-hover:text-cyan-400 transition-colors">{project.title}</h3>
            </div>
            <div class="absolute top-6 right-6 w-10 h-10 rounded-full bg-stone-100 text-stone-950 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all transform translate-y-2 group-hover:translate-y-0">
              <span class="text-lg">↗</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section id="about" class="px-6 py-32 bg-[#0D0E11]/80 backdrop-blur-sm">
    <div class="max-w-7xl mx-auto">
      <div class="grid lg:grid-cols-2 gap-16 items-center">
        <div>
          <p class="text-fuchsia-400 text-sm tracking-widest uppercase mb-4">About Me</p>
          <h2 class="text-4xl md:text-5xl font-serif mb-8">
            Designer, thinker, <em class="text-fuchsia-400">maker</em>
          </h2>
          <div class="space-y-6 text-stone-400 text-lg leading-relaxed">
            <p>
              With over 8 years of experience in product design, I've had the privilege of 
              working with startups and Fortune 500 companies alike, helping them create 
              digital experiences that users love.
            </p>
            <p>
              My approach combines strategic thinking with meticulous craft. I believe 
              great design isn't just about aesthetics—it's about understanding people, 
              solving problems, and creating meaningful connections.
            </p>
            <p>
              When I'm not pushing pixels, you'll find me exploring typography, 
              experimenting with generative art, or hunting for the perfect espresso.
            </p>
          </div>
          <div class="flex gap-6 mt-10">
            <a href="https://linkedin.com" class="text-stone-500 hover:text-fuchsia-400 transition-colors">LinkedIn</a>
            <a href="https://dribbble.com" class="text-stone-500 hover:text-fuchsia-400 transition-colors">Dribbble</a>
            <a href="https://twitter.com" class="text-stone-500 hover:text-fuchsia-400 transition-colors">Twitter</a>
          </div>
        </div>
        <div class="relative">
          <div class="aspect-square rounded-2xl bg-gradient-to-br from-cyan-500/20 to-fuchsia-500/20 flex items-center justify-center">
            <span class="text-stone-500 text-sm">[ Your Photo ]</span>
          </div>
          <div class="absolute -bottom-6 -right-6 w-32 h-32 rounded-xl bg-gradient-to-br from-cyan-400 to-fuchsia-500 -z-10"></div>
        </div>
      </div>
    </div>
  </section>

  <!-- Services/Skills -->
  <section class="px-6 py-32">
    <div class="max-w-7xl mx-auto">
      <div class="text-center mb-16">
        <p class="text-violet-400 text-sm tracking-widest uppercase mb-4">What I Do</p>
        <h2 class="text-4xl md:text-5xl font-serif">Services & Expertise</h2>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8">
        <div class="p-8 rounded-2xl bg-white/[0.02] border border-white/[0.06] hover:border-cyan-400/30 hover:bg-white/[0.04] transition-all group">
          <div class="w-12 h-12 rounded-xl bg-cyan-400/10 text-cyan-400 flex items-center justify-center text-2xl mb-6 group-hover:bg-cyan-400/20 transition-colors">
            ◇
          </div>
          <h3 class="text-xl font-medium mb-4">Product Design</h3>
          <p class="text-stone-400">End-to-end product design from research and strategy to high-fidelity prototypes and design systems.</p>
        </div>
        
        <div class="p-8 rounded-2xl bg-white/[0.02] border border-white/[0.06] hover:border-violet-400/30 hover:bg-white/[0.04] transition-all group">
          <div class="w-12 h-12 rounded-xl bg-violet-400/10 text-violet-400 flex items-center justify-center text-2xl mb-6 group-hover:bg-violet-400/20 transition-colors">
            ◈
          </div>
          <h3 class="text-xl font-medium mb-4">UX Strategy</h3>
          <p class="text-stone-400">User research, journey mapping, and strategic frameworks that align business goals with user needs.</p>
        </div>
        
        <div class="p-8 rounded-2xl bg-white/[0.02] border border-white/[0.06] hover:border-fuchsia-400/30 hover:bg-white/[0.04] transition-all group">
          <div class="w-12 h-12 rounded-xl bg-fuchsia-400/10 text-fuchsia-400 flex items-center justify-center text-2xl mb-6 group-hover:bg-fuchsia-400/20 transition-colors">
            ◆
          </div>
          <h3 class="text-xl font-medium mb-4">Design Systems</h3>
          <p class="text-stone-400">Scalable component libraries and documentation that empower teams to build consistent experiences.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="px-6 py-32 bg-gradient-to-b from-[#0D0E11]/80 to-[#0D0E11]">
    <div class="max-w-4xl mx-auto text-center">
      <p class="text-fuchsia-400 text-sm tracking-widest uppercase mb-4">Get In Touch</p>
      <h2 class="text-4xl md:text-6xl font-serif mb-8">
        Let's create something <em class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-fuchsia-400">amazing</em> together
      </h2>
      <p class="text-lg text-stone-400 mb-12 max-w-2xl mx-auto">
        I'm always open to discussing new projects, creative ideas, or opportunities 
        to be part of your vision.
      </p>
      <a 
        href="mailto:pbanta@gmail.com" 
        class="inline-flex items-center gap-3 px-10 py-5 bg-gradient-to-r from-cyan-400 to-fuchsia-500 text-stone-950 rounded-full font-medium text-lg hover:from-cyan-300 hover:to-fuchsia-400 transition-all"
      >
        <span>pbanta@gmail.com</span>
        <span>→</span>
      </a>
    </div>
  </section>

  <!-- Footer -->
  <footer class="px-6 py-8 border-t border-white/[0.06]">
    <div class="max-w-7xl mx-auto flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-stone-500 text-sm">© 2026 Patrick Banta. All rights reserved.</p>
      <div class="flex gap-6">
        <a href="https://linkedin.com" class="text-stone-500 hover:text-stone-300 text-sm transition-colors">LinkedIn</a>
        <a href="https://dribbble.com" class="text-stone-500 hover:text-stone-300 text-sm transition-colors">Dribbble</a>
        <a href="https://twitter.com" class="text-stone-500 hover:text-stone-300 text-sm transition-colors">Twitter</a>
      </div>
    </div>
  </footer>
</Layout>
