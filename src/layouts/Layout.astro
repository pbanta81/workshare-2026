---
import '../styles/global.css'
import CursorWarp from '../components/CursorWarp.astro'

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Patrick Banta â€” Product Designer',
  description = 'Portfolio of Patrick Banta, a product designer crafting thoughtful digital experiences.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover, interactive-widget=overlays-content" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="text-stone-100 antialiased selection:bg-cyan-400 selection:text-stone-950">
    <CursorWarp />
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }
  
  html, body {
    height: 100%;
    overflow: hidden;
  }
  
  body {
    font-family: 'Berkeley Mono', 'Courier New', Courier, monospace;
    background-color: #0D0E11;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Berkeley Mono', 'Courier New', Courier, monospace;
  }
</style>

