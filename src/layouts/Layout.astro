---
import '../styles/global.css'
import CursorWarp from '../components/CursorWarp.astro'

interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Patrick Banta â€” Product Designer',
  description = 'Portfolio of Patrick Banta, a product designer crafting thoughtful digital experiences.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=DM+Sans:ital,opsz,wght@0,9..40,300;0,9..40,400;0,9..40,500;0,9..40,600;0,9..40,700;1,9..40,400&family=Instrument+Serif:ital@0;1&display=swap" rel="stylesheet">
    <title>{title}</title>
  </head>
  <body class="text-stone-100 antialiased selection:bg-cyan-400 selection:text-stone-950">
    <CursorWarp />
    <slot />
  </body>
</html>

<style is:global>
  * {
    box-sizing: border-box;
  }
  
  html, body {
    scroll-behavior: smooth;
    height: 100%;
    overflow: hidden;
  }
  
  body {
    font-family: 'DM Sans', system-ui, sans-serif;
    background-color: #0D0E11;
  }
  
  h1, h2, h3, .font-serif {
    font-family: 'Instrument Serif', Georgia, serif;
  }
</style>

